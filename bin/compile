#!/bin/bash

indent() {
  sed -u 's/^/       /'
}

cd $1
mkdir -p vendor

MAXMIND=https://geolite.maxmind.com/download/geoip/database

echo "-----> Fetching GeoLiteCity2 IPv4"
curl -L --silent $MAXMIND/GeoLite2-City.mmdb.gz | gzip -d -c > vendor/GeoLite2-City.mmdb
curl -L --silent $MAXMIND/GeoLite2-Country.mmdb.gz | gzip -d -c > vendor/GeoLite2-Country.mmdb
